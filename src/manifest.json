{
  "manifest_version": 3,
  "name": "Chrome extension template",
  "version": "1.0",
  "description": "Chrome extension template",

  "action": {
    "default_icon": {
      "34": "icon-34.png"
    },
    "default_title": "Chrome extension template",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "runtime.bundle.js"
  },
  "permissions": ["tabs"]
}